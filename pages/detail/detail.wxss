/* pages/detail/detail.wxss */
.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.fund-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.fund-title {
  flex: 1;
}

.fund-name {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.fund-code {
  font-size: 12px;
  color: #999;
}

.favorite-btn {
  padding: 10rpx;
}

.favorite-icon {
  font-size: 28px;
  color: #FFB800;
}

.fund-valuation {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #F5F5F5;
  border-bottom: 1rpx solid #F5F5F5;
  margin-bottom: 20rpx;
}

.valuation-item {
  text-align: center;
}

.label {
  font-size: 12px;
  color: #999;
  margin-bottom: 10rpx;
}

.value {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.growth {
  font-size: 14px;
}

.date {
  font-size: 12px;
  color: #999;
}

.fund-info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.info-item {
  padding: 20rpx 0;
}

.info-label {
  font-size: 12px;
  color: #999;
  margin-bottom: 10rpx;
}

.info-value {
  font-size: 14px;
  color: #333;
}

.card-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.position-info {
  background: #F5F5F5;
  border-radius: 8rpx;
  padding: 24rpx;
}

.position-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.position-row:last-child {
  margin-bottom: 0;
}

.position-label {
  font-size: 14px;
  color: #666;
}

.position-value {
  font-size: 14px;
  color: #333;
}

.time-range-tabs {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  padding: 10rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 10rpx;
  font-size: 12px;
  color: #666;
  border-radius: 6rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: #1989FA;
  color: #fff;
  font-weight: bold;
}

.chart-wrapper {
  margin-top: 20rpx;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.action-button {
  flex: 1;
  padding: 24rpx;
  font-size: 16px;
  border-radius: 8rpx;
  border: 1rpx solid #1989FA;
  color: #1989FA;
  background: #fff;
  margin: 0 10rpx;
}

.action-button.primary {
  background: #1989FA;
  color: #fff;
}

.action-button::after {
  border: none;
}
