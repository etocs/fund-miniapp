/* pages/rank/rank.wxss */
.container {
  min-height: 100vh;
}

.filter-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}

.filter-item {
  display: flex;
  align-items: center;
}

.filter-label {
  font-size: 14px;
  color: #666;
  margin-right: 10rpx;
}

.picker-value {
  font-size: 14px;
  color: #1989FA;
  padding: 10rpx 20rpx;
  background: #F0F8FF;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
}

.arrow {
  margin-left: 10rpx;
  font-size: 12px;
}

.fund-list {
  padding: 0 20rpx;
}

.list-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
  font-size: 12px;
  color: #999;
  font-weight: bold;
}

.fund-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #F5F5F5;
}

.fund-item:last-child {
  border-radius: 0 0 16rpx 16rpx;
}

.col {
  display: flex;
  align-items: center;
  font-size: 14px;
}

.col-name {
  flex: 2;
  flex-direction: column;
  align-items: flex-start;
}

.col-nav {
  flex: 1;
  justify-content: center;
}

.col-growth {
  flex: 1;
  justify-content: center;
  font-weight: bold;
}

.col-action {
  flex: 0.5;
  justify-content: center;
}

.fund-name {
  font-size: 14px;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
}

.fund-code {
  font-size: 12px;
  color: #999;
}

.favorite-icon {
  font-size: 20px;
  color: #FFB800;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 40rpx;
  background: #fff;
  border-radius: 16rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 14px;
  color: #999;
}
