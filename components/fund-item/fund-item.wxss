/* components/fund-item/fund-item.wxss */
.fund-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.fund-info {
  flex: 1;
  overflow: hidden;
}

.fund-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.fund-code {
  font-size: 12px;
  color: #999;
}

.fund-data {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.fund-nav {
  text-align: right;
}

.nav-value {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.nav-growth {
  font-size: 14px;
}

.fund-action {
  margin-left: 20rpx;
  padding: 10rpx;
}

.action-icon {
  font-size: 24px;
  color: #FFB800;
}
